<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:mct="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             x:Class="Board_Gamer_App.VotingPage"
             Title="VotingPage"
			 BackgroundColor="#e6904e"
			 Shell.BackgroundColor="#9e4539"
			 Shell.TitleColor="#e6904e">
	
	
	
    <Grid>
		<ScrollView>
			<VerticalStackLayout Spacing="20" Padding="20">

				<HorizontalStackLayout Spacing="15">
					<Label 
					   Text="Derzeit beliebteste Wahl:"/>
					<Label x:Name="PopularChoiceLabel"/>
				</HorizontalStackLayout>

				<Button Text="Brettspiel hinzufÃ¼gen" 
                        Clicked="OnAddButtonClicked"
                        TextColor="White"
                        CornerRadius="8"
						BackgroundColor="#9e4539"
                        HeightRequest="50"/>

				<Label Text="Derzeitige Brettspiele" 
                       FontSize="18" 
                       FontAttributes="Bold"
                       TextColor="#333333"/>

				<CollectionView x:Name="GamesCollectionView">
					<CollectionView.ItemTemplate>
						<DataTemplate>
							<Border Padding="15" 
                                   StrokeShape="RoundRectangle 10,10,10,10"
                                   BackgroundColor="{Binding BorderColor}"
                                   Margin="0,5">
								<Grid>
									<Label Text="{Binding Name}" 
                                       FontSize="20"
                                       TextColor="#212529"
                                       HorizontalOptions = "Start"
                                        VerticalOptions = "Center"/>
									<Button 
                                        HorizontalOptions = "End"
                                        Clicked="OnDeleteButtonClicked"
                                        CommandParameter="{Binding .}"
                                        VerticalOptions = "Center"
                                        MaximumHeightRequest="25"
                                        MaximumWidthRequest="25"
                                        TextColor ="Black"
                                        IsVisible="{Binding DeleteButtonVisible}"
                                        BackgroundColor="#e83b3b">
									</Button>
									<Button 
                                        HorizontalOptions = "End"
                                        Clicked="OnVoteButtonClicked"
                                        CommandParameter="{Binding .}"
                                        VerticalOptions = "Center"
                                        MaximumHeightRequest="25"
                                        MaximumWidthRequest="25"
                                        TextColor ="Black"
                                        IsVisible="{Binding VoteButtonVisible}"
                                        BackgroundColor="#239063">
									</Button>
								</Grid>

							</Border>
						</DataTemplate>
					</CollectionView.ItemTemplate>
				</CollectionView>
			</VerticalStackLayout>
		</ScrollView>

		<Button Text="D"
                Clicked="OnDeleteVisbilityButtonClicked"
                BackgroundColor="#e83b3b"
                TextColor="Black"
                VerticalOptions="End"
                HorizontalOptions="End"
                Margin="10"
                />
    </Grid>
</ContentPage>