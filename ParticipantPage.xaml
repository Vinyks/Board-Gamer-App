<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Board_Gamer_App.ParticipantPage"
             Title="ParticipantPage">
    <VerticalStackLayout>
      
        <ScrollView>
            <ListView x:Name="teilnehmerListe">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="130" />
                                    <ColumnDefinition Width="130" />
                                    <ColumnDefinition Width="130" />
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="60" />
                                </Grid.RowDefinitions>
                                <Label 
                                    Text="PNG"
                                    Grid.Column="0"
                                    Grid.Row="0"
                                    VerticalOptions="Center" 
                                    HorizontalOptions="Start" />
                                <Label 
                                    Text="{Binding Person}"
                                    Grid.Column="1"
                                    Grid.Row="0"
                                    VerticalOptions="Center" 
                                    HorizontalOptions="Start" />
                                <Label 
                                    Text="{Binding Status}"
                                    Grid.Column="2"
                                    Grid.Row="0"
                                    VerticalOptions="Center" 
                                    HorizontalOptions="Center" />
                            </Grid>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </ScrollView>

    </VerticalStackLayout>
</ContentPage>