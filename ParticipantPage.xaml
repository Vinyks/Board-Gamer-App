<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Board_Gamer_App.ParticipantPage"
             Title="ParticipantPage">
     
    <VerticalStackLayout>
        <ScrollView>
            <ListView x:Name="ParticipantList" ItemSelected="OnItemSelected" RowHeight="50">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <Grid 
                                RowDefinitions="*, *"
                                ColumnDefinitions="50, auto">
                                <Image 
                                    Source="chess_pawn2.png"
                                    Grid.Column="0"
                                    Grid.RowSpan="2"
                                    VerticalOptions="Center" 
                                    HorizontalOptions="Center" />
                                <Label 
                                    Text="{Binding Person}"
                                    Grid.Column="1"
                                    Grid.Row="0"
                                    VerticalOptions="End" 
                                    HorizontalOptions="Start"
                                    FontSize="16"
                                    FontAttributes="Bold"
                                    TextColor="Black"/>
                                <Label 
                                    Text="{Binding StatusNachricht}"
                                    Grid.Column="1"
                                    Grid.Row="1"
                                    VerticalOptions="Start" 
                                    HorizontalOptions="Start"
                                    FontSize="14"
                                    TextColor="CornflowerBlue"/>
                            </Grid>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </ScrollView>
    </VerticalStackLayout>
    
</ContentPage>